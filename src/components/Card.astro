---
import { Image } from "astro:assets";

const { slug, title, image, tags } = Astro.props;
---

<figure class="shrink-0 w-full relative">
  <div class="relative">
    <span
      class="relative block transition duration-500 ease-in-out transform rounded hover:scale-105"
    >
      <Image
        width={384}
        class="relative block object-contain object-center w-full h-full"
        loading="lazy"
        alt={title}
        src={image}
      />
    </span>
  </div>
  <div class="pb-0 px-0 py-2">
    <h3 class="text-black text-xl my-2">
      {title}
    </h3>
    <p class="text-sm mb-6 m-0 text-red-600 relative">{tags.join(", ")}</p>
  </div>
</figure>
